<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    tools:context=".Almost_MainActivity">

    <RelativeLayout
        android:id="@+id/almost_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="150dp">

        <TextView
            android:id="@+id/txt_almost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Almost There"
            android:textAlignment="center"
            android:fontFamily="@font/rubik_regular"
            android:textSize="30dp"></TextView>

        <TextView
            android:id="@+id/txt_thank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:text="Thank you for registering with us. One more step you need to check your email to active your account"
            android:textSize="12dp"
            android:textAlignment="center"
            android:layout_below="@id/txt_almost"
            android:fontFamily="@font/rubik_regular"
            android:paddingBottom="50dp"></TextView>

        <Button
            android:id="@+id/btn_verify"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:background="@drawable/btn_custom_login"
            android:text="verify"
            android:fontFamily="@font/nunito_bold"
            android:onClick="btn_verify"
            android:layout_below="@id/txt_thank"></Button>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>